<!DOCTYPE html>
<html lang="en">
  <% include header %>

  <body>
      <% include navbar %>

    <hr />

    <div class="container" role="main" id="addEmployee">
        <br /><br />

        <h2>Add a New Employee</h2>
        <br />

        <form method="post" action="/process" class="form col-md-11">

          <div class="form-group">
            <label for="firstName">First Name:</label>
            <input type="text" class="form-control alert-warning" data-bind="value: firstName" id="firstName">
          </div>

          <div class="form-group">
            <label for="lastName">Last Name:</label>
            <input type="text" class="form-control alert-warning" data-bind="value: lastName" id="lastName">
          </div>

          <div class="form-group">
              <!-- CSRF token for cross site request forgery prevention -->
              <input name="_csrf" value="<%= csrfToken %>" type="hidden" />
              <button type="submit" class="btn btn-secondary float-right">Submit</button>
          </div>

        </form>

        <br /> <br />

        <a href="/list">Employee List</a>

     </div>

     <%include scripts %>

  </body>
</html>
